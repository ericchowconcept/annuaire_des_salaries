{% extends "base.html.twig" %}


{% block body %}
div class="container my-3">
        <table class="table table-striped border border-dark">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Prénom</th>
                    <th>Nom</th>
                    <th>Téléphone</th>
                    <th>Email</th>
                    <th>Adresse</th>
                    <th>Poste</th>
                    <th>Salaire</th>
                    <th>DateDeNaissance</th>
                    
                </tr>
            </thead>
            <tbody>
            {% for salarie in salaries %}
                <tr>
                    <td>{{ salarie.id }}</td>
                    <td>{{ salarie.prenom }}</td>
                    <td>{{ salarie.nom }}</td>
                    <td>{{ salarie.telephone }}</td>
                    <td>{{ salarie.email }}</td>
                    <td>{{ salarie.adresse }}</td>
                    <td>{{ salarie.poste }}</td>
                    <td>{{ salarie.salaire }}</td>
                    <td>{{ salarie.datedenaissance|date('d-M-y') }}</td>
                    
                </tr>
            {% endfor %}
                
            </tbody>
        </table>
    </div>







{% endblock %}